# Turbopack Environment Variables
# These optimize Turbopack performance

# Enable Turbopack optimizations
TURBOPACK=1
TURBOPACK_BUILD=1

# Memory allocation (4GB for enterprise app)
TURBOPACK_MEMORY_LIMIT=4294967296

# CPU cores to use (0 = all available)
TURBOPACK_CPU_CORES=0

# Enable build caching
TURBOPACK_CACHE=filesystem
TURBOPACK_CACHE_DIR=.turbopack/cache

# Dev server optimizations
TURBOPACK_DEV_SERVER_KEEP_ALIVE_TIMEOUT=30000
TURBOPACK_DEV_LOW_MEMORY=false

# Enable experimental features
TURBOPACK_EXPERIMENTAL_STREAMING=true
TURBOPACK_EXPERIMENTAL_REACT_SERVER_COMPONENTS=true

# Tracing for performance debugging (disable in production)
# NEXT_TURBOPACK_TRACING=1

# Bundle analyzer (enable when needed)
# ANALYZE=true